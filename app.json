{
  "expo": {
    "name": "NuPath",
    "slug": "SafePlace",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/nupathLogo.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "packagerOpts": {
      "host": "0.0.0.0"
    },

    "ios": {
      "icon": "./assets/images/nupathLogo.png",
      "supportsTablet": true,
      "infoPlist": {
        "NSMicrophoneUsageDescription": "We need access to your microphone to record audio.",
        "NSPhotoLibraryUsageDescription": "We need access to your photos to allow profile picture uploads.",
        "NSSpeechRecognitionUsageDescription": "Speech recognition is used for voice commands in the app.",
        "ITSAppUsesNonExemptEncryption": false,
        "CFBundleAllowMixedLocalizations": true,
        "NSAppTransportSecurity": {
          "NSExceptionDomains": {
            "exp.direct": {
              "NSIncludesSubdomains": true,
              "NSExceptionAllowsInsecureHTTPLoads": true
            }
          }
        }
      },
      "bitcode": false,
      "bundleIdentifier": "com.anonymous.SafePlace"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/nupathLogo.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "RECORD_AUDIO",
        "android.permission.ACCESS_NETWORK_STATE",
        "android.permission.CAMERA",
        "android.permission.INTERNET",
        "android.permission.MODIFY_AUDIO_SETTINGS",
        "android.permission.RECORD_AUDIO",
        "android.permission.SYSTEM_ALERT_WINDOW",
        "android.permission.WAKE_LOCK",
        "android.permission.BLUETOOTH"
      ],
      "package": "com.anonymous.SafePlace"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/nupathLogo.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/nupathLogo.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "appVariant": "production",
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "b17a75ce-2c57-4a30-944e-23723925c6b4"
      }
    },
    "owner": "kcbsoftware"
  }
}
